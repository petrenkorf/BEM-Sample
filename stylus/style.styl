purple = #534292

.body
	background-color purple 

.form
	background-color white
	border-radius 8px
	margin 0px auto
	max-width 430px
	padding 40px 20px

.form__title
	color purple
	font-size 20px
	text-align center
	margin 0px //mover para reset
	margin-bottom 40px

.form__input
	border 1px solid #C9C9C9
	border-radius 4px
	box-sizing border-box
	display inline-block
	height 40px
	padding-left 54px
	width 100%

.form__input-icon
	display inline-block
	border-right 1px solid #c9c9c9
	height 40px
	position absolute
	width 48px
	
.form__input-container
	margin 18px 0px
	position relative

.form__button
	background-color purple
	border none
	border-radius 4px
	color white
	padding 14px
	width 100%

.form__bottom-panel
	padding-top 40px
	text-align center
